{
  "editor.renderControlCharacters": true,
  "editor.wordWrap": "on",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.linkedEditing": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "C_Cpp.clang_format_style": "{AllowShortFunctionsOnASingleLine: None, AllowShortIfStatementsOnASingleLine: Always, AllowShortLambdasOnASingleLine: None, BasedOnStyle: Google, BreakBeforeBraces: Attach, ColumnLimit: 100, SpaceBeforeParens: ControlStatements, IndentWidth: 2 }",
  "go.formatTool": "goimports",
  "go.toolsManagement.autoUpdate": true,
  "workbench.colorTheme": "Visual Studio Dark",
  "workbench.iconTheme": "material-icon-theme",
  "terminal.integrated.inheritEnv": false,
  "security.workspace.trust.untrustedFiles": "open",
  "http.proxySupport": "off",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": null,
    "editor.formatOnSave": true
  },
  "editor.fontFamily": "Menlo, Monaco, YuGothic, 'Courier New', monospace",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "python": true,
    "json": true,
    "cpp": false
  },
  "window.zoomLevel": 1,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.inlineSuggest.showToolbar": "always",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  }
}
