{
  "markdown-pdf.styles": ["file:///Users/okapy/.vscode/markdown-pdf.css"],
  "latex-workshop.latex.tools": [
    {
      "name": "ptex2pdf",
      "command": "ptex2pdf",
      "args": ["-l", "-ot", "-kanji=utf8 -synctex=1", "%DOC%"]
    },
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-pdf",
        "%DOC%"
      ]
    },
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "pbibtex",
      "command": "pbibtex",
      "args": ["%DOCFILE%"]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "ptex2pdf",
      "tools": ["ptex2pdf"]
    },
    {
      "name": "toolchain with bib",
      "tools": ["ptex2pdf", "pbibtex", "ptex2pdf", "ptex2pdf"]
    }
  ],
  "latex-workshop.view.pdf.viewer": "tab",
  "window.zoomLevel": 2,
  "editor.renderControlCharacters": true,
  "editor.wordWrap": "on",
  "editor.suggestSelection": "first",
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "workbench.iconTheme": "material-icon-theme",
  "C_Cpp.updateChannel": "Insiders",
  "C_Cpp.clang_format_style": "{AllowShortFunctionsOnASingleLine: None, AllowShortIfStatementsOnASingleLine: Always, AllowShortLambdasOnASingleLine: None, BasedOnStyle: Google, BreakBeforeBraces: Attach, SpaceBeforeParens: ControlStatements, IndentWidth: 2 }",
  "editor.copyWithSyntaxHighlighting": false,
  "python.pythonPath": "/Users/okapy/.anyenv/envs/pyenv/shims/python",
  "workbench.colorTheme": "Visual Studio Dark",
  "go.formatTool": "goimports"
}
