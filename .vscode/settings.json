{
  "editor.renderControlCharacters": true,
  "editor.wordWrap": "on",
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.linkedEditing": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "C_Cpp.clang_format_style": "{AllowShortFunctionsOnASingleLine: None, AllowShortIfStatementsOnASingleLine: Always, AllowShortLambdasOnASingleLine: None, BasedOnStyle: Google, BreakBeforeBraces: Attach, ColumnLimit: 100, SpaceBeforeParens: ControlStatements, SortIncludes: false, IndentWidth: 2 }",
  "go.formatTool": "goimports",
  "go.toolsManagement.autoUpdate": true,
  "workbench.colorTheme": "Visual Studio Dark",
  "workbench.iconTheme": "material-icon-theme",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": null
  },
  "editor.fontFamily": "Menlo, Monaco, YuGothic, 'Courier New', monospace",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": true,
    "python": true,
    "json": true,
    "cpp": false
  },
  "git.enableSmartCommit": true,
  "git.suggestSmartCommit": true,
  "scm.inputFontFamily": "editor",
  "window.zoomLevel": 1,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.inlineSuggest.showToolbar": "always",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  }
}
